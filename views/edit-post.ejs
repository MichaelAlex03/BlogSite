<%- include("partials/header.ejs") %>

<div class="row justify-content-center">

    <div class="heading">
        <h2>Edit Post</h2>
    </div>

    <form action="/edit/<%= postId %>" method="POST">

        <div class="form">
            <label for="title"><b>Title</b></label>
            <input type="text" value="<%= post.title %>" name="title">

            <label for="body"><b>Content</b></label>
            <textarea name="body" cols="50" rows="10"><%= post.content %></textarea>
        </div>

        <div class="form">
            <input type="submit" value="Edit" class="btn active">
        </div>
    
    </form>
</div>


